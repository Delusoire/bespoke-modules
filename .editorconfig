# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
tab_width = 3
charset = utf-8
end_of_line = lf
indent_style = tab
max_line_length = 112
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
